@{
    ViewData["Title"] = "OkeanChat";
    Layout = "_Layout";
}

<!-- Landing page â€” dark blue/black theme, full-screen -->
<main class="min-h-screen bg-slate-900 text-white">
    <!-- Hero -->
    <section class="relative min-h-[70vh] flex items-center border-b border-slate-800 overflow-hidden">
        <!-- Decorative gradient blob -->
        <div class="pointer-events-none absolute -top-24 -right-24 w-[520px] h-[520px] rounded-full bg-gradient-to-br from-blue-500/20 to-purple-500/20 blur-3xl"></div>
        <div class="w-full max-w-[1200px] mx-auto px-6 py-20">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
                <div class="max-w-3xl">
                    <div class="flex items-center gap-3 mb-6">
                        <img src="~/img/logo.jpg" alt="OkeanChat" class="w-16 h-16 md:w-20 md:h-20 lg:w-24 lg:h-24 rounded-full object-cover ring-2 ring-slate-800/80" />
                        <span class="text-xl md:text-2xl lg:text-3xl font-semibold tracking-tight uppercase text-slate-200">OkeanChat</span>
                    </div>
                    <h1 class="text-4xl md:text-6xl font-semibold leading-tight tracking-tight">
                        <span class="gradient-text">Global-Grade Communication</span>
                    </h1>
                    <p class="mt-5 text-base md:text-lg text-slate-300 leading-relaxed max-w-2xl">
                        Sign in to your account to continue your language journey and collaborate securely across borders.
                    </p>
                    <p class="mt-3 text-base md:text-lg text-slate-300 leading-relaxed max-w-2xl">
                        Real-time messaging, voice & video, and enterprise-ready privacy.
                    </p>
                    <div class="mt-8 flex items-center gap-3">
                        <a href="@Url.Action("Register", "Account")" class="btn-modern px-5 py-2.5 rounded-md bg-blue-600 hover:bg-blue-700 text-white shadow-glow">
                            Get started
                        </a>
                        <a href="@Url.Action("Login", "Account")" class="btn-modern px-5 py-2.5 rounded-md border border-slate-700 hover:bg-slate-800/70">
                            Sign in
                        </a>
                    </div>
                </div>
                <div class="w-full">
                    <div class="rounded-xl overflow-hidden border border-slate-800 bg-slate-800/40 shadow-xl glass">
                        <img src="@Url.Content("~/avatars/ChatGPT Image 15_46_54 6 thg 11, 2025.png")" alt="OkeanChat Preview" class="w-full h-full object-cover">
                    </div>
                </div>
            </div>

            <!-- Metrics -->
            <div class="grid grid-cols-2 md:grid-cols-4 gap-6 mt-12">
                <div class="glass rounded-lg p-5 border border-slate-700/60 text-center">
                    <div class="text-3xl font-semibold">99.99%</div>
                    <div class="text-slate-400 text-sm mt-1">Uptime</div>
                </div>
                <div class="glass rounded-lg p-5 border border-slate-700/60 text-center">
                    <div class="text-3xl font-semibold">180+</div>
                    <div class="text-slate-400 text-sm mt-1">Countries</div>
                </div>
                <div class="glass rounded-lg p-5 border border-slate-700/60 text-center">
                    <div class="text-3xl font-semibold">1M+</div>
                    <div class="text-slate-400 text-sm mt-1">Messages/day</div>
                </div>
                <div class="glass rounded-lg p-5 border border-slate-700/60 text-center">
                    <div class="text-3xl font-semibold">GDPR</div>
                    <div class="text-slate-400 text-sm mt-1">Compliance</div>
                </div>
            </div>
        </div>
    </section>

    <!-- Trust bar -->
    <section class="border-b border-slate-800">
        <div class="w-full max-w-[1200px] mx-auto px-6 py-10">
            <p class="text-center text-slate-400 text-sm mb-6">Trusted by teams and learners worldwide</p>
            <div class="grid grid-cols-2 md:grid-cols-5 gap-6 items-center opacity-80">
                <img src="https://dummyimage.com/120x40/1f2937/ffffff&text=ACME" alt="ACME" class="mx-auto h-6 md:h-8 object-contain" />
                <img src="https://dummyimage.com/120x40/1f2937/ffffff&text=Global" alt="Global" class="mx-auto h-6 md:h-8 object-contain" />
                <img src="https://dummyimage.com/120x40/1f2937/ffffff&text=UniCorp" alt="UniCorp" class="mx-auto h-6 md:h-8 object-contain" />
                <img src="https://dummyimage.com/120x40/1f2937/ffffff&text=O+Labs" alt="O Labs" class="mx-auto h-6 md:h-8 object-contain" />
                <img src="https://dummyimage.com/120x40/1f2937/ffffff&text=LangAI" alt="LangAI" class="mx-auto h-6 md:h-8 object-contain" />
            </div>
        </div>
    </section>

    <!-- Features -->
    <section id="features" class="border-b border-slate-800">
        <div class="w-full max-w-[1200px] mx-auto px-6 py-16">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                <div class="p-6 rounded-lg glass border border-slate-700/60 hover-lift">
                    <h3 class="text-lg font-semibold">Real-time messaging</h3>
                    <p class="mt-2 text-sm text-slate-300">Fast, reliable chat with read receipts and typing indicators.</p>
                </div>
                <div class="p-6 rounded-lg glass border border-slate-700/60 hover-lift">
                    <h3 class="text-lg font-semibold">Voice & video calls</h3>
                    <p class="mt-2 text-sm text-slate-300">Crystal-clear WebRTC calls with presence and notifications.</p>
                </div>
                <div class="p-6 rounded-lg glass border border-slate-700/60 hover-lift">
                    <h3 class="text-lg font-semibold">Security-first</h3>
                    <p class="mt-2 text-sm text-slate-300">Modern security practices keep your data safe and private.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Pricing (minimal) -->
    <section id="pricing" class="border-b border-slate-800">
        <div class="w-full max-w-[1200px] mx-auto px-6 py-16">
            <h2 class="text-2xl font-semibold">Simple pricing</h2>
            <p class="mt-2 text-sm text-slate-300">Start free. Upgrade when you grow.</p>
            <div class="mt-8 grid grid-cols-1 md:grid-cols-3 gap-6">
                <div class="rounded-lg border border-slate-700 bg-slate-800 p-6 hover-lift">
                    <div class="text-sm text-slate-300">Free</div>
                    <div class="mt-2 text-3xl font-semibold">$0</div>
                    <ul class="mt-4 text-sm text-slate-300 space-y-2">
                        <li>Real-time chat</li>
                        <li>Basic calls</li>
                        <li>Community support</li>
                    </ul>
                    <a href="@Url.Action("Register", "Account")" class="mt-6 inline-flex items-center px-4 py-2 rounded-md border border-slate-700 hover:bg-slate-900 text-sm">Choose Free</a>
                </div>
                <div class="rounded-lg border border-blue-700 bg-slate-800 p-6 hover-lift">
                    <div class="text-sm text-slate-300">Pro</div>
                    <div class="mt-2 text-3xl font-semibold">$9</div>
                    <ul class="mt-4 text-sm text-slate-200 space-y-2">
                        <li>All Free features</li>
                        <li>HD video calls</li>
                        <li>Priority support</li>
                    </ul>
                    <a href="@Url.Action("Register", "Account")" class="mt-6 inline-flex items-center px-4 py-2 rounded-md bg-blue-600 hover:bg-blue-700 text-white text-sm">Choose Pro</a>
                </div>
                <div class="rounded-lg border border-slate-700 bg-slate-800 p-6 hover-lift">
                    <div class="text-sm text-slate-300">Enterprise</div>
                    <div class="mt-2 text-3xl font-semibold">Custom</div>
                    <ul class="mt-4 text-sm text-slate-300 space-y-2">
                        <li>Dedicated support</li>
                        <li>Custom SLAs</li>
                        <li>Advanced security</li>
                    </ul>
                    <a href="#contact" class="mt-6 inline-flex items-center px-4 py-2 rounded-md border border-slate-700 hover:bg-slate-900 text-sm">Contact sales</a>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA -->
    <section id="contact">
        <div class="w-full max-w-[1200px] mx-auto px-6 py-16">
            <div class="max-w-3xl">
                <h2 class="text-2xl font-semibold">Ready to streamline communication?</h2>
                <p class="mt-2 text-sm text-slate-300">Create a free account in minutes. No credit card required.</p>
                <div class="mt-6 flex items-center gap-3">
                    <a href="@Url.Action("Register", "Account")" class="btn-modern px-5 py-2.5 rounded-md bg-blue-600 hover:bg-blue-700 text-white shadow-glow">Get started</a>
                    <a href="mailto:hello@okean.chat" class="btn-modern px-5 py-2.5 rounded-md border border-slate-700 hover:bg-slate-800/70">Contact us</a>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="border-t border-slate-800">
        <div class="w-full max-w-[1200px] mx-auto px-6 py-10 text-sm text-slate-300">
            <div class="flex flex-col md:flex-row items-center justify-between gap-4">
                <div class="flex items-center gap-3">
                    <img src="~/img/logo.jpg" alt="OkeanChat" class="w-7 h-7 rounded-full object-cover" />
                    <span>&copy; @DateTime.Now.Year OkeanChat</span>
                </div>
                <div class="flex items-center gap-4">
                    <a href="#features" class="hover:text-white">Features</a>
                    <a href="@Url.Action("Privacy", "Home")" class="hover:text-white">Privacy</a>
                </div>
            </div>
        </div>
    </footer>
</main>

